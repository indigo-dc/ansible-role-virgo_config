{
  "id": "virgosquid",
  "cmd": "/launch_squid.sh",
  "instances": 1,
  "cpus": 1.00,
  "mem": 2048
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{virgo_config_squid_image}}",
      "network": "BRIDGE",
      "portMappings": [{
        "containerPort": {{virgo_default_squid_port}},
        "servicePort": {{virgo_default_squid_port}},
        "protocol": "tcp"
      }]
    }
  },
  "labels":{
    "HAPROXY_GROUP":"external"
  },
  "healthChecks": [
    {
      "command": {
        "value": "curl -I http://$HOST:$PORT | grep -q squid"
      },
      "protocol": "COMMAND",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "delaySeconds": 15
    }
  ],
  "constraints": [
    ["ccb", "UNLIKE", "True"],
    ["schedd", "UNLIKE", "True"]
  ]
}
